<div class="row">
    <div class="col-sm-12">
        <form class="server-form" method="post">
            <div class="form-group">
                <label for="inputText">Text</label>
                <input type="text" class="form-control" id="inputText" name="inputText" placeholder="Input Text" value="{{text}}">
                <input type="hidden" name="items" value='{{asJSON items}}' />
            </div>
            {{#if error }}
            <div class="form-group">
                <div class="alert alert-danger">
                    {{ error }}
                </div>
            </div>
            {{/if}}
            <div class="form-group">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
            {{#if items.length }}
            <div class="form-group">Item(s) checked</div>
            <ul class="form-group">
                {{#each items}}
                {{#if this.isPalindrome }}
                <li class="alert is-palindrome">
                    {{this.text}}
                </li>
                {{else}}
                <li class="alert not-palindrome">
                    {{this.text}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
            {{/if}}
        </form>
    </div>
</div>